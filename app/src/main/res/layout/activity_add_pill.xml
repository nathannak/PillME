<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_pill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.n.nathan.pillme.AddPillActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <!-- -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select medication type:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_1"
                android:scaleType="fitCenter"
                android:src="@mipmap/capsole"
                android:background="#FFFFFF"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_2"
                android:scaleType="fitCenter"
                android:src="@mipmap/regularroundpill"
                android:background="#FFFFFF"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_3"
                android:src="@mipmap/granolacapsole"
                android:background="#FFFFFF"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_4"
                android:src="@mipmap/calciumpill"
                android:background="#FFFFFF"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_5"
                android:src="@mipmap/rectangularpill"
                android:background="#FFFFFF"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_6"
                android:src="@mipmap/ointment"
                android:background="#FFFFFF"/>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_7"
                android:scaleType="fitCenter"
                android:src="@mipmap/dropper"
                android:background="#FFFFFF"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_8"
                android:scaleType="fitCenter"
                android:src="@mipmap/inhaler"
                android:background="#FFFFFF"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_9"
                android:src="@mipmap/syringe"
                android:background="#FFFFFF"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_10"
                android:src="@mipmap/syrup"
                android:background="#FFFFFF"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_11"
                android:src="@mipmap/spray"
                android:background="#FFFFFF"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_symbol_12"
                android:src="@mipmap/bloodsugar"
                android:background="#FFFFFF"/>
        </LinearLayout>

        <!-- -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat this med set-up on:\n(alarms will repeat too, if there is any created) "
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day1"
                android:id="@+id/Day1_AM_radioButton"
                android:checked="false"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day2"
                android:id="@+id/Day2_AM_radioButton"
                android:checked="false"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day3"
                android:id="@+id/Day3_AM_radioButton"
                android:checked="false"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day4"
                android:id="@+id/Day4_AM_radioButton"
                android:checked="false"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day5"
                android:id="@+id/Day5_AM_radioButton"
                android:checked="false"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day6"
                android:id="@+id/Day6_AM_radioButton"
                android:checked="false"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day7"
                android:id="@+id/Day7_AM_radioButton"
                android:checked="false"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- -->
        <!-- -->
        <Switch
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set an alarm for this med:(24 hour format)"
            android:checked="false"
            android:id="@+id/alarm_switch"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set alarm in Hour:Minute format"
            android:id="@+id/set_alarm_for_how_many_hours"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/hour_number_picker"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/minute_number_picker"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <!-- -->
        <!-- -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select medication name from suggestions or add your own:"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:weightSum="5">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/med_add_edit_text"
                android:layout_weight="4"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds= "true"
                android:id="@+id/pill_add_activity"
                android:scaleType="fitCenter"
                android:src="@mipmap/add"
                android:background="#FFFFFF"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/med_text_1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/med_text_2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/med_text_3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/med_text_4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/med_text_5"/>
        <!-- -->
        <!-- -->

    </LinearLayout>

</ScrollView>
